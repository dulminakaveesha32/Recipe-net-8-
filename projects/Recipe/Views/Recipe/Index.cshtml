@model IEnumerable<Recipe.Models.RecipeModel>
@{
    ViewData["Title"] = "Recipe List";
}

<h2>Recipes</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Created Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var recipe in Model)
        {
            <tr>
                <td>@recipe.Title</td>
                <td>@recipe.CreatedDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@recipe.RecipeId" class="btn btn-info">View</a>
                    <a asp-action="Edit" asp-route-id="@recipe.RecipeId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@recipe.RecipeId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Recipe</a>
